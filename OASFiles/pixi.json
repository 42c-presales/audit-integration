{
  "swagger": "2.0",
  "info": {
    "description": "Pixi Photo Sharing API",
    "version": "Pixi-JWT-Validation",
    "title": "Pixi App API",
    "contact": {
      "email": "nicole.becher@owasp.org"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "tags": [
    {
      "name": "admins",
      "description": "Secured Admin-only calls"
    },
    {
      "name": "users",
      "description": "Operations available to regular, logged in users"
    },
    {
      "name": "anyone",
      "description": "Operations available to anyone"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "anyone"
        ],
        "x-42c-local-strategy": {
          "x-42c-strategy": {
            "protections": [
              {
                "x-42c-set-client-ip_0.1": {
                  "ip.header.name": "X-Forwarded-For",
                  "ip.header.mandatory": true,
                  "remote.ip.allowlist": []
                }
              },
              {
                "x-42c-request-limiter_0.1": {
                  "hits": 3,
                  "window": 6,
                  "add.retry_after": true,
                  "key": "req_limiter_login"
                }
              }
            ]
          }
        },
        "x-42c-no-authentication": true,
        "summary": "login successfully and receive json web token.",
        "parameters": [
          {
            "in": "formData",
            "name": "user",
            "type": "string"
          },
          {
            "in": "formData",
            "name": "pass",
            "type": "string",
            "format": "password",
            "required": true,
            "x-42c-sample": "hellopixi"
          }
        ],
        "operationId": "authenticate",
        "description": "user supplies user name and password and receives a json web token",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "x-42c-local-strategy": {
              "x-42c-strategy": {
                "protections": [
                  {
                    "x-42c-security-headers_0.1": {
                      "hsts.max_age": 15400,
                      "csp.policy": "default-src: 'self'; upgrade-insecure-requests; block-all-mixed-content"
                    }
                  }
                ]
              }
            },
            "description": "",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "pattern": "^[\\w\\s\\.\\-@:,;]{1,255}$",
                  "minLength": 1,
                  "maxLength": 255
                },
                "token": {
                  "type": "string",
                  "pattern": "^([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_\\-\\+\\/=]{4,})",
                  "maxLength": 1000
                }
              },
              "required": [
                "message",
                "token"
              ]
            }
          },
          "202": {
            "description": "successful request, but invalid password",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "422": {
            "description": "missing parameters",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        },
        "consumes": [
          "application/x-www-form-urlencoded"
        ]
      }
    },
    "/register": {
      "post": {
        "tags": [
          "anyone"
        ],
        "x-42c-local-strategy": {
          "x-42c-strategy": {
            "protections": [
              {
                "x-42c-set-client-ip_0.1": {
                  "ip.header.name": "X-Forwarded-For",
                  "ip.header.mandatory": true,
                  "remote.ip.allowlist": []
                }
              },
              {
                "x-42c-request-limiter_0.1": {
                  "hits": 3,
                  "window": 20,
                  "add.retry_after": true,
                  "key": "req_limiter_register"
                }
              }
            ]
          }
        },
        "x-42c-no-authentication": true,
        "summary": "register for an account and receive token",
        "operationId": "register",
        "description": "user supplies email and password to register and receives a json web token.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserRegistrationData"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successfully registered, token received",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "pattern": "^[\\w\\s\\.\\-@:,;]{1,255}$",
                  "minLength": 1,
                  "maxLength": 255
                },
                "token": {
                  "type": "string",
                  "pattern": "^([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_\\-\\+\\/=]{4,})",
                  "maxLength": 1000
                }
              }
            }
          },
          "202": {
            "description": "email address already registered",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        },
        "consumes": [
          "application/json"
        ]
      }
    },
    "/user/info": {
      "get": {
        "tags": [
          "users"
        ],
        "x-42c-local-strategy": {
          "x-42c-strategy": {
            "protections": [
              {
                "x-42c-set-client-ip_0.1": {
                  "ip.header.name": "X-Forwarded-For",
                  "ip.header.mandatory": true,
                  "remote.ip.allowlist": []
                }
              },
              {
                "x-42c-request-limiter_0.1": {
                  "hits": 5,
                  "window": 10,
                  "add.retry_after": true,
                  "key": "req_limiter_get_info"
                }
              },
              {
                "x-42c-jwt-validation-rsa_0.2": {
                  "header.name": "x-access-token",
                  "lifetime": 600,
                  "jp.jose.header.schema": "#/x-42c-components/x-42c-schemas/jose-header",
                  "jp.claims.schema": "#/x-42c-components/x-42c-schemas/jwt-claims"
                }
              }
            ]
          }
        },
        "summary": "get user information",
        "operationId": "userinfo",
        "description": "user supplies valid token and receives all user info",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful authentication sent user information",
            "schema": {
              "type": "array",
              "minItems": 1,
              "maxItems": 1,
              "items": {
                "$ref": "#/definitions/UsersItem"
              }
            }
          },
          "403": {
            "description": "invalid or missing token",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "pattern": "^[\\w\\s\\.\\-@:,;]{1,255}$",
                  "minLength": 1,
                  "maxLength": 255
                },
                "success": {
                  "type": "boolean"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        },
        "security": [
          {
            "access-token": []
          }
        ]
      }
    },
    "/user/edit_info": {
      "put": {
        "tags": [
          "users"
        ],
        "summary": "edit user information",
        "operationId": "edituserinfo",
        "description": "user supplies valid token and updates all user info",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "userobject",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserUpdateData"
            }
          },
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "pattern": "^([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_\\-\\+\\/=]{4,})",
            "maxLength": 1000
          }
        ],
        "responses": {
          "200": {
            "description": "successful authentication sent user information",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "403": {
            "description": "invalid or missing token"
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        },
        "consumes": [
          "application/json"
        ],
        "security": [
          {
            "access-token": []
          }
        ]
      }
    },
    "/admin/users/search": {
      "get": {
        "tags": [
          "admins"
        ],
        "summary": "search for a specific user",
        "description": "search for a specific user",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "pattern": "^([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_\\-\\+\\/=]{4,})",
            "maxLength": 1000
          },
          {
            "in": "query",
            "name": "search",
            "type": "string",
            "pattern": "^[\\w\\s\\.@=]{1,100}$",
            "maxLength": 100,
            "description": "search query ?search=xxx",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "successful authentication user photo json object",
            "schema": {
              "type": "array",
              "minItems": 0,
              "maxItems": 50,
              "items": {
                "$ref": "#/definitions/UsersItem"
              }
            }
          },
          "403": {
            "description": "invalid or missing token"
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        },
        "security": [
          {
            "access-token": []
          }
        ],
        "operationId": "userSearch"
      }
    },
    "/admin/all_users": {
      "get": {
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "pattern": "^([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_\\-\\+\\/=]{4,})",
            "maxLength": 1000
          }
        ],
        "responses": {
          "200": {
            "description": "List Users",
            "schema": {
              "type": "array",
              "minItems": 1,
              "maxItems": 10,
              "items": {
                "$ref": "#/definitions/UsersListItem"
              }
            }
          },
          "403": {
            "description": "No token provided or invalid token."
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        },
        "tags": [
          "admins"
        ],
        "produces": [
          "application/json"
        ],
        "summary": "Returns the list of ALL users. Must be admin to call.",
        "security": [
          {
            "access-token": []
          }
        ],
        "description": "Returns the list of ALL users. Must be admin to call.",
        "operationId": "adminallusers"
      }
    }
  },
  "definitions": {
    "ErrorMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "pattern": "^[\\w\\s\\.\\-@:,;]{1,255}$",
          "minLength": 1,
          "maxLength": 255
        }
      },
      "required": [
        "message"
      ]
    },
    "acme_claims": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "level": {
          "type": "number",
          "format": "int32",
          "minimum": 150,
          "maximum": 10000
        },
        "ver": {
          "type": "string",
          "pattern": "^[0-9\\.]+$",
          "maxLength": 4
        },
        "acl": {
          "type": "array",
          "maxItems": 20,
          "items": {
            "type": "string",
            "enum": [
              "PERMISSION1",
              "PERMISSION2"
            ]
          }
        }
      },
      "required": [
        "level",
        "ver",
        "acl"
      ]
    },
    "UsersItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "_id": {
          "type": "number",
          "format": "integer",
          "minimum": 0,
          "maximum": 999999
        },
        "pic": {
          "type": "string",
          "format": "uri",
          "pattern": "(\\w+:(\\/?\\/?)[^\\s]+)",
          "minLength": 0,
          "maxLength": 200
        },
        "email": {
          "type": "string",
          "format": "email",
          "pattern": "^([a-zA-Z0-9_\\-\\.]+)(@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5}))?$",
          "minLength": 5,
          "maxLength": 50,
          "example": "email@email.com"
        },
        "password": {
          "type": "string",
          "format": "string",
          "pattern": "^[a-zA-Z0-9&@#!?]{4,12}$",
          "minLength": 4,
          "maxLength": 12,
          "example": "p@ssword1"
        },
        "name": {
          "type": "string",
          "example": "Johnny Appleseed",
          "pattern": "(^[\\w\\s\\.]{5,50}$)",
          "minLength": 5,
          "maxLength": 50
        },
        "is_admin": {
          "description": "is admin",
          "type": "boolean"
        },
        "account_balance": {
          "description": "remaining balance",
          "type": "number",
          "format": "float",
          "minimum": 1,
          "maximum": 1000
        },
        "all_pictures": {
          "type": "array",
          "maxItems": 100,
          "items": {
            "type": "object"
          }
        }
      },
      "required": [
        "email",
        "password"
      ]
    },
    "UsersListItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "_id": {
          "type": "number",
          "format": "integer",
          "minimum": 0,
          "maximum": 999
        },
        "pic": {
          "type": "string",
          "format": "uri",
          "pattern": "(\\w+:(\\/?\\/?)[^\\s]+)",
          "minLength": 0,
          "maxLength": 200
        },
        "email": {
          "type": "string",
          "format": "email",
          "pattern": "^([a-zA-Z0-9_\\-\\.]+)(@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5}))?$",
          "minLength": 5,
          "maxLength": 50,
          "example": "email@email.com"
        },
        "name": {
          "type": "string",
          "example": "Johnny Appleseed",
          "pattern": "(^[\\w\\s\\.]{5,50}$)",
          "minLength": 5,
          "maxLength": 50
        },
        "account_balance": {
          "description": "remaining balance",
          "type": "number",
          "format": "float",
          "minimum": 1,
          "maximum": 1000
        }
      },
      "required": [
        "email",
        "name"
      ]
    },
    "UserUpdateData": {
      "type": "object",
      "required": [
        "email",
        "name"
      ],
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "pattern": "^([a-zA-Z0-9_\\-\\.]+)@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5})$",
          "minLength": 4,
          "maxLength": 50
        },
        "name": {
          "type": "string",
          "pattern": "^[\\w\\s\\.]{5,30}$",
          "minLength": 5,
          "maxLength": 30
        },
        "account_balance": {
          "type": "number",
          "format": "float",
          "minimum": 1,
          "maximum": 1000
        }
      }
    },
    "UserRegistrationData": {
      "type": "object",
      "required": [
        "id",
        "user",
        "pass",
        "name",
        "is_admin",
        "account_balance"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64",
          "minimum": 0,
          "maximum": 999
        },
        "user": {
          "type": "string",
          "format": "email",
          "pattern": "^([a-zA-Z0-9_\\-\\.]+)@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5})$",
          "minLength": 4,
          "maxLength": 50
        },
        "pass": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9&@#!?]{4,12}$",
          "minLength": 4,
          "maxLength": 12
        },
        "name": {
          "type": "string",
          "pattern": "^[\\w\\s\\.]{5,30}$",
          "minLength": 5,
          "maxLength": 30
        },
        "is_admin": {
          "type": "boolean"
        },
        "account_balance": {
          "type": "number",
          "format": "float",
          "minimum": -50,
          "maximum": 1000
        }
      }
    }
  },
  "host": "photo-demo.westeurope.cloudapp.azure.com",
  "schemes": [
    "https"
  ],
  "basePath": "/api",
  "securityDefinitions": {
    "access-token": {
      "type": "apiKey",
      "in": "header",
      "name": "x-access-token",
      "description": "Most operations need to pass a user token retrieved calling /api/login"
    }
  },
  "produces": [
    "application/json"
  ],
  "x-42c-components": {
    "x-42c-schemas": {
      "jose-header": {
        "type": "object",
        "properties": {
          "alg": {
            "type": "string",
            "enum": [
              "RS512"
            ]
          },
          "typ": {
            "type": "string",
            "enum": [
              "JWT"
            ]
          }
        },
        "required": [
          "alg",
          "typ"
        ],
        "additionalProperties": false
      },
      "jwt-claims": {
        "type": "object",
        "properties": {
          "iat": {
            "type": "number"
          },
          "exp": {
            "type": "number"
          },
          "sub": {
            "type": "string",
            "pattern": "^([a-zA-Z0-9_\\-\\.]+)@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5})$",
            "maxLength": 128,
            "minLength": 8
          },
          "aud": {
            "type": "string",
            "enum": [
              "pixi.42crunch.com",
              "pixiUsers"
            ]
          },
          "iss": {
            "type": "string",
            "enum": [
              "https://42c-demo",
              "https://42crunch.com"
            ]
          },
          "user_profile": {
            "$ref": "#/definitions/UsersItem"
          },
          "cid": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]+$",
            "maxLength": 50
          },
          "jti": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9\\-_]+$",
            "maxLength": 50
          }
        },
        "required": [
          "iat",
          "user_profile",
          "iss",
          "aud",
          "sub",
          "exp"
        ],
        "additionalProperties": false
      }
    }
  }
}
